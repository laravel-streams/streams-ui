{
    "compileOnSave": false,
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "module": "ES6",
        "outDir": "resources/public/js",
        "jsx": "preserve",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "resolveJsonModule": false,
        "noImplicitUseStrict": false,
        "declaration": true,
        "declarationDir": "resources/public/types",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "../../../node_modules/@types"
        ],
        "lib": [
            "esnext",
            "scripthost",
            "DOM"
        ],
        "types": [
            "webpack-env"
        ]
    },
    "include": [
        "resources/lib"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
